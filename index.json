---
layout: null
---
[
{% for post in site.posts %}
    {% assign content = post.content | strip_html | strip_newlines | replace: '&lt;', '<' | replace: '&gt;', '>' | replace: '&amp;', '&' | replace: '&nbsp;', ' ' | replace: '&#39;', '\'' | escape %}
    {% assign is_valid_json = true %}
    
    {% if content contains '\\' or content contains '"' %}
        {% assign is_valid_json = false %}
    {% endif %}

    {
        "id": "{{ post.id }}",
        "title": "{{ post.title | escape }}",
        "content": {% if is_valid_json %}"{{ content }}"{% else %}"UNINDEXED"{% endif %},
        "url": "{{ post.url }}"
    }{% if forloop.last == false %},{% endif %}
{% endfor %}
]
